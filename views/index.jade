extends layout

block content
  .ma-content-area
    #ma-home.ma-hero.ma-home-hero
      .container-fluid.ma-hero-container
        .row.ma-hero-content
          .ma-ds-table
            .ma-ds-table-cell
              .col-md-7.ma-hero-left.hidden-sm.hidden-xs
                .ma-hero-image
                  img(src="/images/home.png" width="100%" alt="")
              .col-md-5.ma-hero-right
                .ma-hero-text
                  .ma-hero-text-content
                    h1 Welcome to Mobile-Age
                    h4.margin-bottom-30 Open Senior Citizen Public Services Engagement Platform
                    .ma-button-group
                      a(href="/developers/signIn" class="ma-button") Sign in as Developer
                      .ma-separator OR
                      a(href="/odps/signIn" class="ma-button") Sign in as ODP
                  .ma-hero-text-footer
                    p.no-margin Don't have an account? 
                      a(href="/signUp/developer") Register Now
    
