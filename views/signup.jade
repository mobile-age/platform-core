extends layout

block content
  .ma-content-area.ma-colored.ma-top-80.ma-bottom-80.ma-height-100(ng-controller="SignUpCtrl as signUpCtrl")
    section.ma-section#ma-signup
      .container.ma-signup-container
        .row
          .col-md-4.col-sm-4.col-xs-12
            .ma-signup-infobox
              .ma-signup-infobox-container
                p 
                  strong Mobile Age Platform 
                  | sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium.
                h4.margin-bottom-20 
                  strong Create a new account!
                .ma-signup-button
                  a(class="ma-button ma-button-xs" title="Sign up as developer" ng-click="signUpCtrl.setForm(1);")
                    span(class="fa fa-user")
                    span(class="fa fa-code")
                  span Sign up as developer
                p.margin-left-20 OR
                .ma-signup-button
                  a(class="ma-button ma-button-xs" title="Sign up as ODP" ng-click="signUpCtrl.setForm(2);")
                    span(class="fa fa-user")
                    span(class="fa fa-database")
                  span Sign up as ODP
          .col-md-6.col-sm-8.col-xs-12(ng-if="signUpCtrl.currentForm === 1")
            .ma-signup-form-container
              .ma-signup-form-content
                h1.margin-bottom-30 Sign Up As Developer
                form(action="" method="post" name="signup-form" role="form")
                  if message
                    .alert.alert-danger.ma-alert
                      p.margin-bottom-5 Validation errors exist:
                      ul
                        for error in message
                          li!= error.msg
                  .form-group.text-left.ma-relative-pos
                    label 
                      i(class="fa fa-user ma-signup-icon") 
                      | Username
                    input(type="text" class="form-control" name="username")
                  .form-group.text-left.ma-relative-pos
                    label 
                      i(class="fa fa-envelope ma-signup-icon") 
                      | Email
                    input(type="text" class="form-control" name="username")
                  .form-group.text-left
                    label 
                      i(class="fa fa-lock ma-signup-icon")
                      | Password  
                    input(type="password" class="form-control" name="password")
                  .form-group.text-left
                    label Confirm Password
                    input(type="password" class="form-control" name="passwordConfirm")
                  .form-group
                    input(type="submit" class="ma-button margin-top-20" value="Sign Up")
              .ma-signup-form-footer
                p.no-margin Do you have an account? 
                  a(href="/developers/signIn") Sign In
          .col-md-6.col-sm-8.col-xs-10.col-xs-offset-1(ng-if="signUpCtrl.currentForm === 2")
            .ma-signup-form-container
              .ma-signup-form-content
                h1.margin-bottom-30 Sign Up As ODP
                form(action="" method="post" name="signup-form" role="form")
                  if message
                    .alert.alert-danger.ma-alert
                      p.margin-bottom-5 Validation errors exist:
                      ul
                        for error in message
                          li!= error.msg
                  .form-group.text-left.ma-relative-pos
                    label 
                      i(class="fa fa-user ma-signup-icon") 
                      | Username
                    input(type="text" class="form-control" name="username")
                  .form-group.text-left.ma-relative-pos
                    label 
                      i(class="fa fa-envelope ma-signup-icon") 
                      | Email
                    input(type="text" class="form-control" name="username")
                  .form-group.text-left
                    label 
                      i(class="fa fa-lock ma-signup-icon")
                      | Password  
                    input(type="password" class="form-control" name="password")
                  .form-group.text-left
                    label Confirm Password
                    input(type="password" class="form-control" name="passwordConfirm")
                  .form-group.text-left
                    label Organization
                    input(type="text" class="form-control" name="organization")
                  .form-group.text-left
                    label Area of Interest
                    input(type="text" class="form-control" name="areaOfInterest")
                  .form-group
                    input(type="submit" class="ma-button margin-top-20" value="Sign Up")
              .ma-signup-form-footer
                p.no-margin Do you have an account? 
                  a(href="/odps/signIn") Sign In
                        
                  
